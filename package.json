{
    "name": "12capm",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/approuter": "^10.4.2",
        "@sap/cds": "^5",
        "@sap/cds-odata-v2-adapter-proxy": "^1.7.4",
        "@sap/hana-client": "^2.6.61",
        "@sap/xsenv": "^3.1.0",
        "@sap/xssec": "^3.2.2",
        "express": "^4",
        "hdb": "^0.18.3",
        "passport": "^0.4.1"
    },
    "devDependencies": {
        "@sap/hdi-deploy": "^4.0.5",
        "@sap/ux-specification": "^1.90.1",
        "sqlite3": "^5.0.2"
    },
    "scripts": {
        "start": "cds run"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    },
    "cds": {
        "requires": {
            "uaa": {
                "kind": "xsuaa"
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[devlopment]": {
                    "strategy": "mock",
                    "users": {
                        "bhushan": {
                            "roles": [
                                "Admin",
                                "Viewer"
                            ],
                            "userAttributes": {
                                "BankName": [
                                    "$UNRESTRICTED"
                                ]
                            }
                        },
                        "vihang": {
                            "roles": [
                                "Viewer"
                            ],
                            "userAttributes": {
                                "BankName": [
                                    "$UNRESTRICTED"
                                ]
                            }
                        }
                    }
                }
            },
            "db": {
                "kind": "hana"
            }
        },
        "hana": {
            "deploy-format": "hdbtable"
        }
    },
    "sapux": [
        "app/purchaseorderapp"
    ]
}
